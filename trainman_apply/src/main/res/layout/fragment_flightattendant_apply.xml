<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <TextView android:id="@+id/top_flightattendant_apply"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="乘务应用"
              android:textSize="26sp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              android:layout_marginTop="20dp"
              android:layout_marginLeft="20dp"
              android:textColor="@color/black"
              tools:ignore="MissingConstraints"/>

    <LinearLayout android:id="@+id/ll_qianshou"
            android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  tools:ignore="MissingConstraints"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toLeftOf="@+id/ll_diaoling_search"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@id/top_flightattendant_apply">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="调令签收"
                  android:textColor="@color/black"
                  android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/ll_diaoling_search"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  tools:ignore="MissingConstraints"
                  app:layout_constraintRight_toLeftOf="@+id/ll_checi_search"
                 app:layout_constraintLeft_toRightOf="@id/ll_qianshou"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@id/top_flightattendant_apply">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="调令查询"
                  android:textColor="@color/black"
                  android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/ll_checi_search"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  tools:ignore="MissingConstraints"
                 app:layout_constraintLeft_toRightOf="@id/ll_diaoling_search"
                  app:layout_constraintRight_toLeftOf="@+id/ll_lieche_search"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@id/top_flightattendant_apply">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="车次查询"
                  android:textColor="@color/black"
                  android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/ll_lieche_search"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  tools:ignore="MissingConstraints"
                 app:layout_constraintLeft_toRightOf="@id/ll_checi_search"
                  app:layout_constraintRight_toRightOf="parent"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@id/top_flightattendant_apply">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="列车时刻表查询"
                  android:textColor="@color/black"
                  android:textSize="20sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>