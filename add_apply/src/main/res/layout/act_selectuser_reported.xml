<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:background="@color/main_title_bg">
        <RelativeLayout
                android:id="@+id/back_info_select_reported"
                android:layout_width="50dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="match_parent">

            <ImageView android:layout_width="17dp"
                       android:layout_height="30dp"
                       android:layout_centerInParent="true"
                       android:background="@mipmap/fanhui"/>
        </RelativeLayout>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="信息上报"
                  android:textStyle="bold"
                  android:layout_centerInParent="true"
                  android:textSize="30sp"/>
    </RelativeLayout>

    <TextView android:id="@+id/liechezhang_shangbao"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:gravity="center"
              android:textColor="@color/black"
              android:background="@color/gry"
              android:textSize="20sp"
              android:text="列车长上报"/>
    <TextView android:id="@+id/chedui_shangbao"
            android:layout_width="match_parent"
              android:layout_height="80dp"
              android:gravity="center"
              android:textColor="@color/black"
              android:textSize="20sp"
              android:text="车队上报"/>
    <TextView android:id="@+id/jiguan_shangbao"
            android:layout_width="match_parent"
              android:layout_height="80dp"
              android:gravity="center"
              android:background="@color/gry"
              android:textColor="@color/black"
              android:textSize="20sp"
              android:text="机关上报"/>
    <TextView android:id="@+id/diqin_shangbao"
            android:layout_width="match_parent"
              android:layout_height="80dp"
              android:gravity="center"
              android:textColor="@color/black"
              android:textSize="20sp"
              android:text="地勤上报"/>
</LinearLayout>